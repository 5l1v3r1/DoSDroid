<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.kalymnos.sk3m3l10.ddosdroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".mvc_model.connectivity.host_services.AttackLaunchService"
            android:enabled="true"
            android:exported="false"></service>

        <activity
            android:name=".mvc_model.connectivity.client.bluetooth.RequestLocationPermissionForBluetoothActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvc_controllers.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvc_controllers.activities.attack_creation.CreateAttackActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".mvc_controllers.activities.AllAttackListsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvc_controllers.activities.JoinAttackActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".mvc_model.connectivity.host_services.JoinAttackService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".mvc_model.connectivity.host_services.HostAttackService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".mvc_model.job.AttackJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <activity
            android:name=".mvc_model.connectivity.network_constraints.bluetooth.enable.EnableBluetoothActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mvc_model.connectivity.network_constraints.bluetooth.discoverable.BluetoothDiscoverableActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>